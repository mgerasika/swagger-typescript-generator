{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "jsx": "preserve",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "composite": true,
    "moduleResolution": "node",
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "gen"
  ]
}
