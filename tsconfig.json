{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "jsx": "preserve",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "composite": true,
    "moduleResolution": "node",
    "strict": true
  },
  "include": [
    "src/**/*",
    "src/react-app/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "tmp",
    "dist",
    "react-app",
    "**/react-app"
  ]
}
